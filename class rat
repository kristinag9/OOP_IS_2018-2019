#include <iostream>
#include <cmath>

using namespace std;

class rat
{
private:
    int num;
    int den;
public:
    rat();
    rat(int, int);
    void read();

    int numer() const;
    int denom() const;
    bool iszero() const;
    void printrat() const;
};

int gcd(int a, int b)
{
    while(a != b)
    if(a > b) a = a - b;
    else b = b - a;
    return a;
}

rat::rat()
{
    num = 0;
    den = 1;
}
rat::rat(int x, int y)
{
    if(y == 0)
        cout << "Incorrect input." << endl;
    else if(x == 0)
    {
        num = 0;
        den = 1;
    }
    else
    {
        int g = gcd(abs(x), abs(y));
        if(x > 0 && y > 0 || x < 0 && y < 0)
        {
            num = abs(x)/g;
            den = abs(y)/g;
        }
        else
        {
            num = -abs(x)/g;
            den = abs(y)/g;
        }

    }
}

void rat::read()
{
    cout << "num: ";
    cin >> num;
    do
    {
        cout << "den: ";
        cin >> den;
    } while(den == 0);
}

int rat::numer() const
{
    return num;
}

int rat::denom() const
{
    return den;
}

bool rat::iszero() const
{
    return num == 0;
}

void rat::printrat() const
{
    cout << this->num << "/" << this->den << endl;
}

int main()
{
    rat p;
    rat q(1,6);
    rat r = rat(5,9);
    rat m = rat(10,-20);

    p.printrat();
    q.printrat();
    r.printrat();
    m.printrat();
    
    return 0;
}
