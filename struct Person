#include <iostream>
const int SIZE = 16;
const int MAX_SIZE = 20;

using namespace std;

struct Person
{
    char f_name[SIZE];
    char l_name[SIZE];
};
void read_person(Person& P)
{
    cout << "Personal name: ";
    cin >> P.f_name;
    cout << "Last name: ";
    cin >> P.l_name;
}
void print_person(const Person& P)
{
    cout << "Personal name: " << P.f_name << endl;
    cout << "Last name: " << P.l_name << endl;
}

struct Client
{
    Person name;
    double amount;
};
void read_client(Client& C)
{
    cout << "Name: \n";
    read_person(C.name);
    cout << "Sum of the client: \n";
    cin >> C.amount;
}
void print_client(const Client& C)
{
    cout << "Name: \n";
    print_person(C.name);
    cout << "Amount: " << C.amount << endl;
}

int main()
{
  cout << "Enter n (from 1 to " << MAX_SIZE << ") :";
    int n;
    cin >> n;
    Client a[MAX_SIZE];
    for(int i = 0; i < n; i++)
    {
        read_client(a[i]);
    }

    cout << "Clients of the bank: " << endl;
    for(int i = 0; i < n; i++)
    {
        print_client(a[i]);
    }

    double sum = 0;
    for(int i = 0; i < n; i++)
    {
        if(a[i].amount < 0)
            sum += a[i].amount;
        cout << "Sum of the responsibilities of the clients is: " << sum << endl;
    }
    
    return 0;
}
